#:kivy 1.11.1

#:import images_path kivymd.images_path


<CustomOneLineIconListItem>:
    IconLeftWidget:
        icon: root.icon


<MyWidget>:
    orientation: 'vertical'
    canvas:
        Color:
            rgba: (99/255,114/255,143/255,255/255)
            s: 0.3
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: (1, 0.1)
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.3, 1)
            BoxLayout:
                size_hint: (1, 0.5)
                Label:
                    text: "Status da Conexão"
            MDBoxLayout:
                orientation: 'vertical'
                BoxLayout:
                    size_hint: (1, 0.5)
                MDButton:
                    disabled: False
                    disabled_color: "white"
                    pos_hint: {"center_x": 0.5, "center_y": .5}
                    style: "elevated"
                    theme_bg_color: "Custom"
                    md_bg_color: (99/255,114/255,143/255,255/255)
                    MDButtonIcon:
                        id: lb_status_conected_icon
                        icon: "lan-disconnect"
                        theme_icon_color: "Custom"
                        icon_color: "white"
                    MDButtonText:
                        id: lb_status_conected_text
                        theme_text_color: "Custom"
                        text_color: "white"
                        text: "Cliente Desconectado"
                        theme_font_size: "Custom"
                        font_size: "18sp"
                BoxLayout:
                    size_hint: (1, 0.5)
        BoxLayout:
            orientation: 'vertical'
            size_hint: (0.3, 1)
            Label:
                text: "ENE118 - INFORMATICA INDUSTRIAL"
            Label:
                text: "Software Supervisório - Esteira"
        MDBoxLayout:
            orientation: 'vertical'
            size_hint: (0.3, 1)
            BoxLayout:
                size_hint: (1, 0.5)
            MDButton:
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release: root._ipConfigModal.open()
                style: "elevated"
                theme_bg_color: "Custom"
                md_bg_color: (99/255,114/255,143/255,255/255)
                MDButtonText:
                    id: lb_status_conected_text
                    theme_text_color: "Custom"
                    text_color: "white"
                    text: "Configurações MODBUS - Porta, Ip e Scantime"
                    theme_font_size: "Custom"
                    font_size: "18sp"
            BoxLayout:
                size_hint: (1, 0.5)
    BoxLayout:
        orientation: "horizontal"
        canvas:
            Color:
                rgba: (203/255,208/255,219/255,255/255)
            Rectangle:
                size: self.size
        FloatLayout:
            size_hint: (0.45, 1)
            canvas:
                Color:
                    rgba: (203/255,208/255,219/255,255/255)
                Rectangle:
                    size: self.size
        MDFloatLayout:
            canvas:
                Color:
                    rgba: (203/255,208/255,219/255,255/255)
                Rectangle:
                    size: self.size
            Image:
                id: img_modelo
                source:'img/model/MODELO-VERDE.png'
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size: self.texture_size

            MDIconButton:
                id: bt_temperatura
                disabled: False
                icon: "thermometer"
                style: "tonal"
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_x": 0.04, "center_y": 0.173}
                md_bg_color: (175/255,184/255,199/255,255/255)
                on_release:
                    root._temperaturaModal.open()

            MDIconButton:
                id: bt_potencia
                disabled: False
                icon: "alpha-p-circle-outline"
                style: "tonal"
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_x": 0.112, "center_y": 0.173}
                md_bg_color: (175/255,184/255,199/255,255/255)
                on_release:
                    root._potenciaModal.open()

            MDIconButton:
                id: bt_tensao
                disabled: False
                icon: "flash-triangle-outline"
                style: "tonal"
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_x": 0.04, "center_y": 0.100}
                md_bg_color: (175/255,184/255,199/255,255/255)
                on_release:
                    root._tensaoModal.open()

            MDIconButton:
                id: bt_corrente
                disabled: False
                icon: "sine-wave"
                style: "tonal"
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_x": 0.112, "center_y": 0.100}
                md_bg_color: (175/255,184/255,199/255,255/255)
                on_release:
                    root._correnteModal.open()

            MDIconButton:
                id: bt_velocidade
                disabled: False
                icon: "alpha-t-box-outline"
                style: "tonal"
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_x": 0.04, "center_y": 0.40}
                md_bg_color: (175/255,184/255,199/255,255/255)
                on_release:
                    root._tensaoModal.open()

            MDIconButton:
                id: bt_rpm
                disabled: False
                icon: "reload"
                style: "tonal"
                theme_icon_color: "Custom"
                theme_bg_color: "Custom"
                icon_color: "white"
                pos_hint: {"center_x": 0.112, "center_y": 0.40}
                md_bg_color: (175/255,184/255,199/255,255/255)
                on_release:
                    root._correnteModal.open()
            
            Bar:
                id: bar_torque
                value: 85
                orientation: 'bt' # horizontal bar
                size_hint: (0.025, 0.4)
                pos_hint: {"x": 0.027, "y": 0.450}
                color: (82/255, 96/255, 122/255, 255/255)
                background_color: (175/255,184/255,199/255,255/255)
            
            Bar:
                id: bar_rmp
                value: 85
                orientation: 'bt' # horizontal bar
                size_hint: (0.025, 0.4)
                pos_hint: {"x": 0.1, "y": 0.450}
                color: (82/255, 96/255, 122/255, 255/255)
                background_color: (175/255,184/255,199/255,255/255)


        FloatLayout:      
            size_hint: (0.45, 1)
            canvas:
                Color:
                    rgba: (203/255,208/255,219/255,255/255)
                Rectangle:
                    size: self.size
